@page "/"
@inject IStringLocalizer<Index> L
@using Microsoft.AspNetCore.Authorization
<style>
.lp-app-grid {
    display: grid;
    gap: 24px;
    grid-template-columns: repeat(auto-fit,minmax(300px,1fr));
}
</style>
<PageTitle>@L["Dashboard"]</PageTitle>
